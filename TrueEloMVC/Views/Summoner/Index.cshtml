@{






    <h1> Penis bolshoy </h1>

    <form method="post">
        <input type="text" name="summoner_name" />

        <select name="summoner_region">
            @{
                Array regionArray = Enum.GetValues(typeof(RiotSharp.Misc.Region));
                int i = 0;
                foreach (RiotSharp.Misc.Region region in regionArray)
                {
                    @:
                    <option value="@i">@region</option>
                    i++;
                    if (i==11) { break; }
                }
            }
        </select>



        <input type="submit"   value="Поиск" />



    </form>
}

